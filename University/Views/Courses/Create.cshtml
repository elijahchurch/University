@{
  Layout = "_Layout";
}

@model University.Models.Course

<h3>Create a course</h3>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.CourseNumber)
  @Html.TextBoxFor(model => model.CourseNumber)


  <input type="submit" value="Create course" class="btn btn-primar" />
}

<p>@Html.ActionLink("Back to courses","Index")</p>