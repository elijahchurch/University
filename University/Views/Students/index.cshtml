@{
    Layout = "_Layout";
}

@using University.Models;

<h1>Students of UGG</h1>
<hr />

<h2> Here is a list of all the students</h2>

@if (@Model.Count == 0)
{
    <h4> "There are no students added to UGG's database"</h4>
}

@foreach (Student student in Model)
{
    <h4> @Html.ActionLink($"{student.Name}", "Details", new {id = student.StudentId}) </h4>
}

<hr />
<p>@Html.ActionLink("Add new Student", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
